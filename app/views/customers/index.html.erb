<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<h1>Listing Customers</h1>
<table>
    <head>
        <tr>
            <td>Name</td>
            <td><td>
            <td><td>
        </tr>
    </head>
    <tbody>
        <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.name %></td>
            <td><%= link_to 'View', customer_path(customer) %><td>
            <td><%= link_to 'Edit', edit_customer_path(customer) %><td>
        </tr>
        <% end %>
    </tbody>
</table>

<ul>
    <li><%= link_to "Register new Customer", new_customer_path %></li>
</ul>


