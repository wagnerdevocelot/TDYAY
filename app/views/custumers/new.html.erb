<% if @custumer.errors.any? %>
    <ul>
        <% @custumer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>        


<h1>Register new Custumer</h1>

<%= form_for @custumer do |f| %>

    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %><br>

    <%= f.label :email, 'E-mail' %>
    <%= f.text_field :email %><br>

    <%= f.label :phone, 'Phone' %>
    <%= f.text_field :phone %><br>

    <%= f.label :avatar, 'Avatar' %>
    <%= f.file_field :avatar %><br>

    <%= f.label :smoker %>
    <% { 'Yes': 'Yes', 'No': 'No'}.each do |key, value| %>
        <%= f.radio_button :smoker, key %> <%= value %>
    <% end %><br>

    <%= f.submit 'Register Custumer' %>

<% end %>